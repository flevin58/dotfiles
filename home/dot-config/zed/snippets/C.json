    "description": "standard define"
  },
  "include": {
    "prefix": "inc",
    "body": "#include <${1:stdio.h}>",
    "description": "include header"
  },
  "main": {
    "prefix": "main",
    "body": ["int main() {", "\t${1:// code here}", "\treturn 0;", "}"],
    "description": "main function"
  },
  "printf": {
    "prefix": "pf",
    "body": "printf(\"${1:%s}\\n\", ${2:variable});",
    "description": "printf statement"
  },
  "for": {
    "prefix": "for",
    "body": [
      "for (${1:int i = 0}; ${2:i < n}; ${3:i++}) {",
      "\t${4:// code here}",
      "}"
    ],
    "description": "for loop"
  },
  "if": {
    "prefix": "if",
    "body": ["if (${1:condition}) {", "\t${2:// code here}", "}"],
    "description": "if statement"
  }
